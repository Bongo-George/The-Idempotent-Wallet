{
  "name": "idempotent-wallet",
  "version": "1.0.0",
  "description": "Production-grade wallet service with idempotency and transaction safety",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "ts-node src/app.ts",
    "migrate": "sequelize-cli db:migrate",
